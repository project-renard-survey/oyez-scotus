                        },
                        "text_blocks": [
                            {
                                "start": 713.291,
                                "stop": 719.949,
                                "byte_start": 2956622,
                                "byte_stop": 2983267,
                                "text": "Bar association does it apply, does it apply to the Junior State Bar Association?"
                            },
                            {
                                "start": 719.949,
                                "stop": 726.355,
                                "byte_start": 2983267,
                                "byte_stop": 3008867,
                                "text": "The -- the Chapters 31 and 32 rather, do they apply to any organization of NAACP?"
                            }
                        ]
                    },
                    {
                        "start": 726.355,
                        "stop": 737.441,
                        "byte_start": 3008867,
                        "byte_stop": 3053275,
                        "speaker": {
                            "ID": 30487,
