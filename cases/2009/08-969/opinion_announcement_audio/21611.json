    "title": "Opinion Announcement - January 25, 2010",
    "transcript": {
        "title": "Hemi Group LLC v. City of New York",
        "duration": 351.817,
        "sections": [
            {
                "start": 0,
                "stop": 351.817,
                "byte_start": 105472,
                "byte_stop": 0,
                "turns": [
                    {
                        "start": 0,
                        "stop": 351.817,
                        "byte_start": 105472,
                        "byte_stop": 0,
                        "speaker": {
                            "ID": 15086,
                            "name": "John G. Roberts, Jr.",
                            "href": "https:\/\/api.oyez.org\/people\/john_g_roberts_jr",
                            "last_name": "Roberts",
                            "roles": [
                                {
                                    "id": 2730,
