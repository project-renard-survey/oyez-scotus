                                "href": "https:\/\/api.oyez.org\/sites\/default\/files\/warren_burger.png"
                            },
                            "length_of_service": 6304,
                            "identifier": "warren_e_burger"
                        },
                        "text_blocks": [
                            {
                                "start": 495.708,
                                "stop": 497.208,
                                "byte_start": 2083437,
                                "byte_stop": 2089393,
                                "text": "Thank you Mr. Justice Blackmun."
                            },
                            {
                                "start": 497.208,
                                "stop": 499.987,
                                "byte_start": 2089393,
                                "byte_stop": 2100469,
                                "text": "Thank you Mr. Justice Powell."
                            }
                        ]
                    }
