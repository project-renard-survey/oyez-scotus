    "title": "Opinion Announcement - February 22, 2012",
    "transcript": {
        "title": "Messerschmidt v. Millender",
        "duration": 436.898,
        "sections": [
            {
                "start": 0,
                "stop": 436.898,
                "byte_start": 106496,
                "byte_stop": 0,
                "turns": [
                    {
                        "start": 0,
                        "stop": 436.898,
                        "byte_start": 106496,
                        "byte_stop": 0,
                        "speaker": {
                            "ID": 15086,
                            "name": "John G. Roberts, Jr.",
                            "href": "https:\/\/api.oyez.org\/people\/john_g_roberts_jr",
                            "last_name": "Roberts",
                            "roles": [
