        "title": "Christopher v. SmithKline",
        "duration": 295.419,
        "sections": [
            {
                "start": 0,
                "stop": 295.419,
                "byte_start": 108544,
                "byte_stop": 0,
                "turns": [
                    {
                        "start": 0,
                        "stop": 295.419,
                        "byte_start": 108544,
                        "byte_stop": 0,
                        "speaker": {
                            "ID": 15068,
                            "name": "Samuel A. Alito, Jr.",
                            "href": "https:\/\/api.oyez.org\/people\/samuel_alito_jr",
                            "last_name": "Alito",
                            "roles": [
                                {
                                    "id": 2712,
                                    "type": "scotus_justice",
