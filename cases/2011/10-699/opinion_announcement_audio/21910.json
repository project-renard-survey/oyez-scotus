    "title": "Opinion Announcement - March 26, 2012",
    "transcript": {
        "title": "Zivotofsky v. Clinton",
        "duration": 251.376,
        "sections": [
            {
                "start": 0,
                "stop": 251.376,
                "byte_start": 107520,
                "byte_stop": 0,
                "turns": [
                    {
                        "start": 0,
                        "stop": 251.376,
                        "byte_start": 107520,
                        "byte_stop": 0,
                        "speaker": {
                            "ID": 15086,
                            "name": "John G. Roberts, Jr.",
                            "href": "https:\/\/api.oyez.org\/people\/john_g_roberts_jr",
                            "last_name": "Roberts",
                            "roles": [
                                {
                                    "id": 2730,
                                    "type": "scotus_justice",
                                    "date_start": 1127970000,
