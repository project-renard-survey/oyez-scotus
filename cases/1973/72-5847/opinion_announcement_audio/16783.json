                        "text_blocks": [
                            {
                                "start": 10.228,
                                "stop": 15.362,
                                "byte_start": 117760,
                                "byte_stop": 138344,
                                "text": "This case is here on certiorari from the Court of Appeals for the Tenth Circuit."
                            },
                            {
                                "start": 15.362,
                                "stop": 21.188,
                                "byte_start": 138344,
                                "byte_stop": 161646,
                                "text": "The petitioner, a black employee was discharged by the respondent company."
                            },
                            {
                                "start": 21.188,
                                "stop": 31.347,
                                "byte_start": 161646,
                                "byte_stop": 202292,
                                "text": "Petitioner claimed racial discrimination and through his union, initiated arbitration proceedings under the collective bargaining agreement."
                            },
                            {
                                "start": 31.347,
                                "stop": 35.918,
                                "byte_start": 202292,
                                "byte_stop": 220473,
                                "text": "That agreement prohibited racial discrimination."
                            },
                            {
                                "start": 35.918,
                                "stop": 42.89,
                                "byte_start": 220473,
                                "byte_stop": 248372,
                                "text": "After hearing, the arbitrator ruled that petitioner\u0027s discharge was for a cause."
                            },
                            {
                                "start": 42.89,
                                "stop": 50.771,
                                "byte_start": 248372,
                                "byte_stop": 279928,
                                "text": "The petitioner that pursued remedies under Title 7 of the Civil Rights Act of 1964."
                            },
                            {
                                "start": 50.771,
                                "stop": 60.541,
                                "byte_start": 279928,
                                "byte_stop": 319007,
                                "text": "Following unfavorable action by EEOC, petitioner instituted this suit in the District Court."
                            },
                            {
                                "start": 60.541,
                                "stop": 72.132,
                                "byte_start": 319007,
                                "byte_stop": 365401,
                                "text": "That court granted respondent\u0027s motion for summary judgment, holding that petitioner was bound by the prior arbitral decision."
                            },
                            {
                                "start": 72.132,
                                "stop": 93.286,
                                "byte_start": 365401,
                                "byte_stop": 450038,
                                "text": "The question presented to us is whether under Title 7, one who has sought relief by arbitration pursuant to a collective bargaining agreement and who has lost, may nevertheless obtain a de novo trial for the discrimination issue in a federal district court."
                            },
                            {
                                "start": 93.286,
                                "stop": 95.423,
                                "byte_start": 450038,
                                "byte_stop": 458501,
                                "text": "We hold that he may."
                            },
                            {
                                "start": 95.423,
                                "stop": 118.098,
                                "byte_start": 458501,
                                "byte_stop": 549198,
                                "text": "That the statutory right to such a trial is not foreclosed either by waiver or by the doctrine of election of remedies, but the federal court may admit the arbitral decision in evidence and accord to it such weight as maybe appropriate under the facts and circumstances of the case."
                            },
                            {
                                "start": 118.098,
                                "stop": 124,
                                "byte_start": 549198,
                                "byte_stop": 572709,
                                "text": "The judgment of the Circuit Court is reversed."
                            }
                        ]
                    }
                ]
            }
        ]
