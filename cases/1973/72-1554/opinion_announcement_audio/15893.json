                        "text_blocks": [
                            {
                                "start": 281.552,
                                "stop": 285.693,
                                "byte_start": 1203096,
                                "byte_stop": 1219500,
                                "text": "Thank you Mr. Justice Stewart, thank you Mr. Justice Blackmun."
                            }
                        ]
                    }
