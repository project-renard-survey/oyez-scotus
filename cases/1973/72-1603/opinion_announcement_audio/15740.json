                        },
                        "text_blocks": [
                            {
                                "start": 327.272,
                                "stop": 330.689,
                                "byte_start": 1385953,
                                "byte_stop": 1399536,
                                "text": "Thank you Mr. Justice Blackmun, Mr. Justice Stewart."
                            }
                        ]
