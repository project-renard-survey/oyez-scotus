                        "text_blocks": [
                            {
                                "start": 0,
                                "stop": 14.446,
                                "byte_start": 28672,
                                "byte_stop": 86559,
                                "text": "I also have to announce No. 73-1892, Weinberger, Secretary of Health, Education, and Welfare against Wiesenfeld."
                            },
                            {
                                "start": 14.446,
                                "stop": 31.61,
                                "byte_start": 86559,
                                "byte_stop": 155209,
                                "text": "Under the Social Security Act, when a covered male worker dies, leaving a wife and minor children, survivors\u0027 benefits are paid both to the children and to the widow."
                            },
                            {
                                "start": 31.61,
                                "stop": 45.579,
                                "byte_start": 155209,
                                "byte_stop": 211007,
                                "text": "However, when a covered female worker dies, leaving a husband and minor children, survivors\u0027 benefits are paid only to the children and not to the widower."
                            },
                            {
                                "start": 45.579,
                                "stop": 62.488,
                                "byte_start": 211007,
                                "byte_stop": 278716,
                                "text": "A three-judge District Court in New Jersey held that this sex-based discrimination was unconstitutional because in violation of the equal protection component of the Due Process Clause of the Fifth Amendment."
                            },
                            {
                                "start": 62.488,
                                "stop": 65.421,
                                "byte_start": 278716,
                                "byte_stop": 290419,
                                "text": "We agree and we affirm."
                            },
                            {
                                "start": 65.421,
                                "stop": 71.202,
                                "byte_start": 290419,
                                "byte_stop": 313511,
                                "text": "Mr. Justice Powell joined by the Chief Justice has filed a concurring opinion."
                            },
                            {
                                "start": 71.202,
                                "stop": 75.818,
                                "byte_start": 313511,
                                "byte_stop": 332006,
                                "text": "Mr. Justice Rehnquist has filed an opinion concurring in the result."
                            },
                            {
                                "start": 75.818,
                                "stop": 81.291,
                                "byte_start": 332006,
                                "byte_stop": 353844,
                                "text": "Mr. Justice Douglas took no part in the consideration or decision of the case."
                            }
                        ]
                    },
