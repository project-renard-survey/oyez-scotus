                            "identifier": "lewis_f_powell_jr"
                        },
                        "text_blocks": [
                            {
                                "start": 17.912,
                                "stop": 24.121,
                                "byte_start": 100352,
                                "byte_stop": 125221,
                                "text": "In Schlesinger, the case comes to us from the Court of Appeals for the Tenth Circuit."
                            },
                            {
                                "start": 24.121,
                                "stop": 31.581,
                                "byte_start": 125221,
                                "byte_stop": 155000,
                                "text": "It involves the relationship between the federal civilian courts and the military court system."
                            },
                            {
                                "start": 31.581,
                                "stop": 41.532,
                                "byte_start": 155000,
                                "byte_stop": 194811,
                                "text": "Respondent, an Army Captain was charged with marijuana offenses committed while off duty and off base."
                            },
                            {
                                "start": 41.532,
                                "stop": 48.651,
                                "byte_start": 194811,
                                "byte_stop": 223336,
                                "text": "He obtained a federal court injunction against his being tried by military court martial."
                            },
                            {
                                "start": 48.651,
                                "stop": 60.386,
                                "byte_start": 223336,
                                "byte_stop": 270252,
                                "text": "The Court of Appeals finding that the marijuana offenses were not service connected held that a military court lack jurisdiction to try them."
                            },
                            {
                                "start": 60.386,
                                "stop": 64.309,
                                "byte_start": 270252,
                                "byte_stop": 285926,
                                "text": "Accordingly, it sustained the injunction."
                            },
                            {
                                "start": 64.309,
                                "stop": 83.286,
                                "byte_start": 285926,
                                "byte_stop": 361890,
                                "text": "We agreed to review the case to resolve conflicting views as to respective powers and responsibilities of Article 3 civilian courts as compared with those of military courts."
                            },
                            {
                                "start": 83.286,
                                "stop": 98.344,
                                "byte_start": 361890,
                                "byte_stop": 422076,
                                "text": "Although we conclude that the District Court did have subject matter jurisdiction, we think for reasons stated in the opinion that there was no occasion in this case for the exercise of that jurisdiction."
                            },
                            {
                                "start": 98.344,
                                "stop": 117.774,
                                "byte_start": 422076,
                                "byte_stop": 499816,
                                "text": "The system of military courts was established by the Congress which recognized that the military is a specialized society separate from civilian society with laws and traditions of its own developed during a long history."
                            },
                            {
                                "start": 117.774,
                                "stop": 134.272,
                                "byte_start": 499816,
                                "byte_stop": 565854,
                                "text": "Strong considerations of policy including the expertise of the military courts favor exhaustion of remedies within that system before it resort to review our collateral attack in civilian courts."
                            },
                            {
                                "start": 134.272,
                                "stop": 143.206,
                                "byte_start": 565854,
                                "byte_stop": 601590,
                                "text": "We find nothing in the circumstances of this case that justified injunctive action by the civilian courts."
                            },
                            {
                                "start": 143.206,
                                "stop": 147.086,
                                "byte_start": 601590,
                                "byte_stop": 617054,
                                "text": "Accordingly, we reverse the judgment of the Court of Appeals."
                            },
                            {
                                "start": 147.086,
                                "stop": 152.217,
                                "byte_start": 617054,
                                "byte_stop": 637639,
                                "text": "The Chief Justice filed a separate statement concurring in the judgment."
                            },
                            {
                                "start": 152.217,
                                "stop": 168.173,
                                "byte_start": 637639,
                                "byte_stop": 701273,
                                "text": "Mr. Justice Douglas, Mr. Justice Brennan, and Mr. Justice Marshall concurred in part and dissented in part."
                            }
                        ]
                    }
                ]
            }
