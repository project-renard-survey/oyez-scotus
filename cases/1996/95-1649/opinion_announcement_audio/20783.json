    "title": "Opinion Announcement - June 23, 1997",
    "transcript": {
        "title": null,
        "duration": 399.748,
        "sections": [
            {
                "start": 0,
                "stop": 399.748,
                "byte_start": 28672,
                "byte_stop": 1627575,
                "turns": [
                    {
                        "start": 0,
