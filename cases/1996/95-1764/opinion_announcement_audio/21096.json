    "title": "Opinion Announcement - June 02, 1997",
    "transcript": {
        "title": null,
        "duration": 176.017,
        "sections": [
            {
                "start": 0,
                "stop": 176.017,
                "byte_start": 28672,
                "byte_stop": 732724,
                "turns": [
                    {
                        "start": 0,
