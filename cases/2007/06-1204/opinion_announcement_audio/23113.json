    "title": "Opinion Announcement - June 12, 2008",
    "transcript": {
        "title": "Republic of Philippines v. Pimentel",
        "duration": 345.391,
        "sections": [
            {
                "start": 0,
                "stop": 345.391,
                "byte_start": 104761,
                "byte_stop": 0,
                "turns": [
                    {
                        "start": 0,
                        "stop": 345.391,
                        "byte_start": 104761,
                        "byte_stop": 0,
                        "speaker": {
                            "ID": 15113,
                            "name": "Anthony M. Kennedy",
                            "href": "https:\/\/api.oyez.org\/people\/anthony_m_kennedy",
                            "last_name": "Kennedy",
                            "roles": [
                                {
                                    "id": 2757,
                                    "type": "scotus_justice",
