                        "byte_stop": 0,
                        "speaker": {
                            "ID": 15094,
                            "name": "Elena Kagan",
                            "href": "https:\/\/api.oyez.org\/people\/elena_kagan",
                            "last_name": "Kagan",
                            "roles": [
                                {
                                    "id": 2738,
                                    "type": "scotus_justice",
