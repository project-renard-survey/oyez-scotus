        "title": "Goodyear v. Brown",
        "duration": 318.354,
        "sections": [
            {
                "start": 0,
                "stop": 318.354,
                "byte_start": 104448,
                "byte_stop": 0,
                "turns": [
                    {
                        "start": 0,
                        "stop": 318.354,
                        "byte_start": 104448,
                        "byte_stop": 0,
                        "speaker": {
                            "ID": 15084,
                            "name": "Ruth Bader Ginsburg",
                            "href": "https:\/\/api.oyez.org\/people\/ruth_bader_ginsburg",
                            "last_name": "Ginsburg",
                            "roles": [
                                {
                                    "id": 2728,
