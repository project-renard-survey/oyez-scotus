        "title": "Stanford University v. Roche Molecular Systems",
        "duration": 273.659,
        "sections": [
            {
                "start": 0,
                "stop": 273.659,
                "byte_start": 105472,
                "byte_stop": 0,
                "turns": [
                    {
                        "start": 0,
                        "stop": 273.659,
                        "byte_start": 105472,
                        "byte_stop": 0,
                        "speaker": {
                            "ID": 15074,
                            "name": "John A. Campbell",
                            "href": "https:\/\/api.oyez.org\/people\/john_a_campbell",
                            "last_name": "Campbell",
                            "roles": [
                                {
                                    "id": 2718,
