        "title": "CIGNA v. Amara",
        "duration": 312.242,
        "sections": [
            {
                "start": 0,
                "stop": 312.242,
                "byte_start": 105472,
                "byte_stop": 0,
                "turns": [
                    {
                        "start": 0,
