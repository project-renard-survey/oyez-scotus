        "title": "Mayo Foundation v. United States",
        "duration": 260.284,
        "sections": [
            {
                "start": 0,
                "stop": 260.284,
                "byte_start": 105472,
                "byte_stop": 0,
                "turns": [
                    {
                        "start": 0,
