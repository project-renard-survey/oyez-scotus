    "title": "Opinion Announcement - June 20, 2011",
    "transcript": {
        "title": "Wal-Mart v. Dukes",
        "duration": 628.846,
        "sections": [
            {
                "start": 0,
                "stop": 628.846,
                "byte_start": 105472,
                "byte_stop": 0,
                "turns": [
                    {
                        "start": 0,
                        "stop": 628.846,
                        "byte_start": 105472,
                        "byte_stop": 0,
                        "speaker": {
                            "ID": 15049,
                            "name": "Antonin Scalia",
                            "href": "https:\/\/api.oyez.org\/people\/antonin_scalia",
                            "last_name": "Scalia",
                            "roles": [
                                {
                                    "id": 2693,
                                    "type": "scotus_justice",
