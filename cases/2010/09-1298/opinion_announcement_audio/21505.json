    "title": "Opinion Announcement - May 23, 2011",
    "transcript": {
        "title": "General Dynamics Corp. v. United States",
        "duration": 481.776,
        "sections": [
            {
                "start": 0,
                "stop": 481.776,
                "byte_start": 105472,
                "byte_stop": 0,
                "turns": [
                    {
                        "start": 0,
                        "stop": 481.776,
                        "byte_start": 105472,
                        "byte_stop": 0,
                        "speaker": {
                            "ID": 15049,
                            "name": "Antonin Scalia",
                            "href": "https:\/\/api.oyez.org\/people\/antonin_scalia",
                            "last_name": "Scalia",
                            "roles": [
                                {
                                    "id": 2693,
                                    "type": "scotus_justice",
                                    "date_start": 528094800,
