    "title": "Opinion Announcement - January 19, 2011",
    "transcript": {
        "title": "Harrington v. Richter",
        "duration": 457.613,
        "sections": [
            {
                "start": 0,
                "stop": 457.613,
                "byte_start": 105472,
                "byte_stop": 0,
                "turns": [
                    {
                        "start": 0,
                        "stop": 457.613,
