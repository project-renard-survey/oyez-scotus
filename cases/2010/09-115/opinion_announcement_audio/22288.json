                        "byte_stop": 0,
                        "speaker": {
                            "ID": 15074,
                            "name": "John A. Campbell",
                            "href": "https:\/\/api.oyez.org\/people\/john_a_campbell",
                            "last_name": "Campbell",
                            "roles": [
                                {
