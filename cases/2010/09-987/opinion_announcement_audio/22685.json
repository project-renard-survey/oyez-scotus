    "title": "Opinion Announcement - April 04, 2011",
    "transcript": {
        "title": "Arizona Christian School Tuition Organization v. Winn",
        "duration": 237.087,
        "sections": [
            {
                "start": 0,
                "stop": 237.087,
                "byte_start": 104448,
                "byte_stop": 0,
                "turns": [
                    {
                        "start": 0,
                        "stop": 237.087,
                        "byte_start": 104448,
                        "byte_stop": 0,
                        "speaker": {
                            "ID": 15113,
                            "name": "Anthony M. Kennedy",
                            "href": "https:\/\/api.oyez.org\/people\/anthony_m_kennedy",
                            "last_name": "Kennedy",
                            "roles": [
                                {
                                    "id": 2757,
