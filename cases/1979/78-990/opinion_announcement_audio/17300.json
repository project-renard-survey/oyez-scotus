        "title": "United States v. Bailey",
        "duration": 300.302,
        "sections": [
            {
                "start": 0,
                "stop": 300.302,
                "byte_start": 28672,
                "byte_stop": 1229782,
                "turns": [
                    {
                        "start": 0,
                        "stop": 277.396,
                        "byte_start": 28672,
                        "byte_stop": 1138354,
                        "speaker": {
                            "ID": 15141,
                            "name": "William H. Rehnquist",
                            "href": "https:\/\/api.oyez.org\/people\/william_h_rehnquist",
                            "last_name": "Rehnquist",
                            "roles": [
