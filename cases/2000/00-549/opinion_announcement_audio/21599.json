                "byte_stop": 0,
                "turns": [
                    {
                        "start": 0,
                        "stop": 238.001,
                        "byte_start": 89587,
                        "byte_stop": 0,
                        "speaker": {
                            "ID": 15139,
                            "name": "Stephen G. Breyer",
                            "href": "https:\/\/api.oyez.org\/people\/stephen_g_breyer",
                            "last_name": "Breyer",
                            "roles": [
                                {
                                    "id": 2785,
