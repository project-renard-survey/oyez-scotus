                        "text_blocks": [
                            {
                                "start": 10.077,
                                "stop": 17.653,
                                "byte_start": 131183,
                                "byte_stop": 161485,
                                "text": "This case comes to us on a writ of certiorari to the United States Court of Appeals for the Sixth Circuit."
                            },
                            {
                                "start": 17.653,
                                "stop": 24.223,
                                "byte_start": 161485,
                                "byte_stop": 187817,
                                "text": "The respondent, Richard Wilson committed extortion and other crimes in Tennessee."
                            },
                            {
                                "start": 24.223,
                                "stop": 32.807,
                                "byte_start": 187817,
                                "byte_stop": 222089,
                                "text": "State authorities arrested Wilson and held him in jail pending the outcome of simultaneous state and federal prosecutions."
                            },
                            {
                                "start": 32.807,
                                "stop": 39.73,
                                "byte_start": 222089,
                                "byte_stop": 249779,
                                "text": "The United States District Court eventually gave Wilson a 96-month sentence."
                            },
                            {
                                "start": 39.73,
                                "stop": 53.363,
                                "byte_start": 249779,
                                "byte_stop": 304323,
                                "text": "Wilson appealed to the sentence to the Court of Appeals for the Sixth Circuit arguing that the District Court should have given him credit for the time that he spent in state jail."
                            },
                            {
                                "start": 53.363,
                                "stop": 58.606,
                                "byte_start": 304323,
                                "byte_stop": 325325,
                                "text": "The Court of Appeals for the Sixth Circuit agreed with Wilson and reversed the District Court."
                            },
                            {
                                "start": 58.606,
                                "stop": 64.839,
                                "byte_start": 325325,
                                "byte_stop": 350298,
                                "text": "In an opinion filed today with the Clerk\u0027s office, we now reverse the Court of Appeals."
                            },
                            {
                                "start": 64.839,
                                "stop": 75.064,
                                "byte_start": 350298,
                                "byte_stop": 391154,
                                "text": "A federal prisoner has a right to receive credit for certain pre-sentenced jail time under 18 U.S.C. Section 3585(b)."
                            },
                            {
                                "start": 75.064,
                                "stop": 81.424,
                                "byte_start": 391154,
                                "byte_stop": 416649,
                                "text": "We conclude, however, that a District Court may not award this credit at sentencing."
                            },
                            {
                                "start": 81.424,
                                "stop": 95.409,
                                "byte_start": 416649,
                                "byte_stop": 472551,
                                "text": "Section 3585(b) gives a defendant a right to credit for \u0022any time that he has spent in official detention before his sentence begins\u0022."
                            },
                            {
                                "start": 95.409,
                                "stop": 106.164,
                                "byte_start": 472551,
                                "byte_stop": 515601,
                                "text": "Calculation of this credit cannot occur at sentencing because a defendant\u0027s total detention time remains unknown until he actually goes to prison."
                            },
                            {
                                "start": 106.164,
                                "stop": 114.655,
                                "byte_start": 515601,
                                "byte_stop": 549560,
                                "text": "In our review, the credit must be determined as an administrative matter once the defendant begins to serve his sentence."
                            },
                            {
                                "start": 114.655,
                                "stop": 120.163,
                                "byte_start": 549560,
                                "byte_stop": 0,
                                "text": "Justice Stevens has filed a dissenting opinion which Justice White has joined."
                            }
                        ]
                    }
                ]
