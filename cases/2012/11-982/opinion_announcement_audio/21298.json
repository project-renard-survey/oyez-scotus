    "title": "Opinion Announcement - January 09, 2013",
    "transcript": {
        "title": "Already LLC v. Nike",
        "duration": 415.68,
        "sections": [
            {
                "start": 0,
                "stop": 415.68,
                "byte_start": 106496,
                "byte_stop": 1769138,
                "turns": [
                    {
                        "start": 0,
                        "stop": 415.68,
                        "byte_start": 106496,
                        "byte_stop": 1769138,
                        "speaker": {
                            "ID": 15086,
                            "name": "John G. Roberts, Jr.",
                            "href": "https:\/\/api.oyez.org\/people\/john_g_roberts_jr",
                            "last_name": "Roberts",
                            "roles": [
                                {
                                    "id": 2730,
                                    "type": "scotus_justice",
                                    "date_start": 1127970000,
