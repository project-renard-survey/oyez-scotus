                        ]
                    },
                    {
                        "start": 7.457,
                        "stop": 114.333,
                        "byte_start": 109862,
                        "byte_stop": 537225,
                        "speaker": {
                            "ID": 15141,
                            "name": "William H. Rehnquist",
                            "href": "https:\/\/api.oyez.org\/people\/william_h_rehnquist",
                            "last_name": "Rehnquist",
                            "roles": [
                                {
