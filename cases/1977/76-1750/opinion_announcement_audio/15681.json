    "title": "Opinion Announcement - March 28, 1978",
    "transcript": {
        "title": "Stump v. Sparkman",
        "duration": 602.263,
        "sections": [
            {
                "start": 0,
                "stop": 602.263,
                "byte_start": 79983,
                "byte_stop": 2488995,
                "turns": [
                    {
                        "start": 0,
                        "stop": 7.438,
                        "byte_start": 79983,
                        "byte_stop": 109763,
                        "speaker": {
                            "ID": 15073,
                            "name": "Warren E. Burger",
                            "href": "https:\/\/api.oyez.org\/people\/warren_e_burger",
                            "last_name": "Burger",
