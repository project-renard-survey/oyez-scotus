                        "text_blocks": [
                            {
                                "start": 406.095,
                                "stop": 407.429,
                                "byte_start": 1704399,
                                "byte_stop": 1709728,
                                "text": "Thank you Mr. Justice Brennan."
                            },
                            {
                                "start": 407.429,
                                "stop": 409.251,
                                "byte_start": 1709728,
                                "byte_stop": 1716938,
                                "text": "Thank you Mr. Justice Stewart."
                            }
                        ]
                    }
