    "transcript": {
        "title": "Agosto v. Immigration and Naturalization Service",
        "duration": 573.568,
        "sections": [
            {
                "start": 0,
                "stop": 573.568,
                "byte_start": 79979,
                "byte_stop": 2374157,
                "turns": [
                    {
                        "start": 0,
