                        "text_blocks": [
                            {
                                "start": 11.59,
                                "stop": 16.695,
                                "byte_start": 130544,
                                "byte_stop": 151024,
                                "text": "This case comes to us on writ of certiorari to the Court of Appeals for the Eleventh Circuit."
                            },
                            {
                                "start": 16.695,
                                "stop": 32.555,
                                "byte_start": 151024,
                                "byte_stop": 214450,
                                "text": "The petitioner Cortez Byrd Chips Incorporated and the respondent Bill Harbert Construction Company agreed that any disputes arising from Harbert\u2019s Construction of a Mississippi mill for Cortez Byrd would be decided by arbitration."
                            },
                            {
                                "start": 32.555,
                                "stop": 39.259,
                                "byte_start": 214450,
                                "byte_stop": 241199,
                                "text": "After a dispute arose, arbitration was conducted in Alabama and Harbert received an award."
                            },
                            {
                                "start": 39.259,
                                "stop": 48.812,
                                "byte_start": 241199,
                                "byte_stop": 279442,
                                "text": "Cortez Byrd sought to vacate and modify the award in the Federal District Court for the Southern District of Mississippi, where the contract was performed."
                            },
                            {
                                "start": 48.812,
                                "stop": 55.215,
                                "byte_start": 279442,
                                "byte_stop": 305042,
                                "text": "Seven days later, Harbert sought to confirm the award in the Northern District of Alabama."
                            },
                            {
                                "start": 55.215,
                                "stop": 66.105,
                                "byte_start": 305042,
                                "byte_stop": 348615,
                                "text": "The Alabama Court refused to dismiss transfer or stay its action, concluding that venue was proper only there, and it entered judgment for Harbert."
                            },
                            {
                                "start": 66.105,
                                "stop": 80.257,
                                "byte_start": 348615,
                                "byte_stop": 405248,
                                "text": "The Eleventh Circuit held that under the Federal Arbitration Act venue for motions to confirm, vacate, or modify awards was exclusively in the district where the arbitration award was made, in this case, Alabama."
                            },
                            {
                                "start": 80.257,
                                "stop": 83.93,
                                "byte_start": 405248,
                                "byte_stop": 419877,
                                "text": "In an opinion filed with the Clerk of Court today, we reverse."
                            },
                            {
                                "start": 83.93,
                                "stop": 98.004,
                                "byte_start": 419877,
                                "byte_stop": 476197,
                                "text": "The Federal Arbitration Act\u2019s venue provisions are permissive, allowing a motion to confirm, vacate or modify to be brought either in the district where the award was made or in any district proper under the general venue statute."
                            },
                            {
                                "start": 98.004,
                                "stop": 100.99,
                                "byte_start": 476197,
                                "byte_stop": 0,
                                "text": "And our opinion is unanimous."
                            }
                        ]
                    }
                ]
            }
        ]
