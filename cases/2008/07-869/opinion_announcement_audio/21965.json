                            "identifier": "john_g_roberts_jr"
                        },
                        "text_blocks": [
                            {
                                "start": 0,
                                "stop": 8.7,
                                "byte_start": 106496,
                                "byte_stop": 141396,
                                "text": "I have our opinion this morning in case 07-869, Ysursa versus Pocatello Education Association."
                            },
                            {
                                "start": 8.7,
                                "stop": 17.619,
                                "byte_start": 141396,
                                "byte_stop": 177027,
                                "text": "Under Idaho law, a public employee may elect to have a portion of his wages deducted and remitted to his union to pay union dues."
                            },
                            {
                                "start": 17.619,
                                "stop": 22.179,
                                "byte_start": 177027,
                                "byte_stop": 195312,
                                "text": "But Idaho law prohibits payroll deductions for political activities."
                            },
                            {
                                "start": 22.179,
                                "stop": 28.611,
                                "byte_start": 195312,
                                "byte_stop": 221017,
                                "text": "So a public employee may not have a dues checkoff for the union\u0027s political action committee."
                            },
                            {
                                "start": 28.611,
                                "stop": 40.422,
                                "byte_start": 221017,
                                "byte_stop": 268246,
                                "text": "A group of Idaho public employee unions sued, alleging that Idaho\u0027s ban on payroll deductions for political activities violated the First and Fourteenth Amendments."
                            },
                            {
                                "start": 40.422,
                                "stop": 46.289,
                                "byte_start": 268246,
                                "byte_stop": 291756,
                                "text": "The First Amendment prohibits government from \u0022abridging the freedom of speech\u0022."
                            },
                            {
                                "start": 46.289,
                                "stop": 53.448,
                                "byte_start": 291756,
                                "byte_stop": 320387,
                                "text": "Restrictions that single out a category of speech for disfavored treatment are presumptively invalid."
                            },
                            {
                                "start": 53.448,
                                "stop": 58.947,
                                "byte_start": 320387,
                                "byte_stop": 342329,
                                "text": "First Amendment does not, however, impose an obligation on government to subsidize speech."
                            },
                            {
                                "start": 58.947,
                                "stop": 66.216,
                                "byte_start": 342329,
                                "byte_stop": 371378,
                                "text": "A State is therefore not required to assist others in funding the expression of particular ideas."
                            },
                            {
                                "start": 66.216,
                                "stop": 76.592,
                                "byte_start": 371378,
                                "byte_stop": 412965,
                                "text": "Idaho\u0027s law does not restrict political speech but rather declines to promote that speech by allowing public employee checkoffs for political activities."
                            },
                            {
                                "start": 76.592,
                                "stop": 82.294,
                                "byte_start": 412965,
                                "byte_stop": 435743,
                                "text": "Idaho\u0027s public employee unions are free to engage in such speech as they see fit."
                            },
                            {
                                "start": 82.294,
                                "stop": 87.462,
                                "byte_start": 435743,
                                "byte_stop": 456432,
                                "text": "They simply are barred from enlisting the State in support of that endeavor."
                            },
                            {
                                "start": 87.462,
                                "stop": 96.194,
                                "byte_start": 456432,
                                "byte_stop": 491332,
                                "text": "Idaho\u0027s decision to limit public employee payroll deductions as it has does not infringe the unions\u0027 First Amendment rights."
                            },
                            {
                                "start": 96.194,
                                "stop": 102.532,
                                "byte_start": 491332,
                                "byte_stop": 516723,
                                "text": "The State accordingly need only demonstrate a rational basis to justify the ban."
                            },
                            {
                                "start": 102.532,
                                "stop": 111.937,
                                "byte_start": 516723,
                                "byte_stop": 554339,
                                "text": "Idaho\u0027s justification is the interest in avoiding the reality or appearance of government favoritism or entanglement with partisan politics."
                            },
                            {
                                "start": 111.937,
                                "stop": 117.274,
                                "byte_start": 554339,
                                "byte_stop": 575655,
                                "text": "And the State\u0027s response targets its source, political payroll deductions."
                            },
                            {
                                "start": 117.274,
                                "stop": 124.313,
                                "byte_start": 575655,
                                "byte_stop": 603763,
                                "text": "The ban plainly serves the State\u0027s interest in separating public employment from political activities."
                            },
                            {
                                "start": 124.313,
                                "stop": 134.626,
                                "byte_start": 603763,
                                "byte_stop": 645036,
                                "text": "Now, the union say that whether or not all that is true, that only justifies the ban at the level of state employers not local government employers."
                            },
                            {
                                "start": 134.626,
                                "stop": 140.435,
                                "byte_start": 645036,
                                "byte_stop": 668338,
                                "text": "But the same analysis applies whether the ban is directed at state or local government entities."
                            },
                            {
                                "start": 140.435,
                                "stop": 150.852,
                                "byte_start": 668338,
                                "byte_stop": 709925,
                                "text": "Political subdivisions have never been considered sovereign entities but are instead subordinate governmental instrumentalities carrying out state governmental functions."
                            },
                            {
                                "start": 150.852,
                                "stop": 160.886,
                                "byte_start": 709925,
                                "byte_stop": 750049,
                                "text": "Idaho\u0027s interest in separating the operation of government from parties and politics extends to all public employers at whatever level of government."
                            },
                            {
                                "start": 160.886,
                                "stop": 172.701,
                                "byte_start": 750049,
                                "byte_stop": 797383,
                                "text": "Now, given the relationship between the State and its political subdivisions, it is immaterial how the State allocates funding or management responsibilities between the different levels of government."
                            },
                            {
                                "start": 172.701,
                                "stop": 177.762,
                                "byte_start": 797383,
                                "byte_stop": 817549,
                                "text": "The First Amendment analysis does not vary depending on the level of government affected."
                            },
                            {
                                "start": 177.762,
                                "stop": 185.226,
                                "byte_start": 817549,
                                "byte_stop": 847433,
                                "text": "The State is not required to promote political speech by allowing public employee checkoffs for political activities."
                            },
                            {
                                "start": 185.226,
                                "stop": 188.534,
                                "byte_start": 847433,
                                "byte_stop": 860703,
                                "text": "The decision of the Court of Appeals is reversed."
                            },
                            {
                                "start": 188.534,
                                "stop": 193.879,
                                "byte_start": 860703,
                                "byte_stop": 882019,
                                "text": "Justice Ginsburg has filed an opinion concurring in part and concurring in the judgment."
                            },
                            {
                                "start": 193.879,
                                "stop": 198.134,
                                "byte_start": 882019,
                                "byte_stop": 899051,
                                "text": "Justice Breyer has filed an opinion concurring in part and dissenting in part."
                            },
                            {
                                "start": 198.134,
                                "stop": 203.832,
                                "byte_start": 899051,
                                "byte_stop": 921725,
                                "text": "And Justices Stevens and Souter have filed dissenting opinions."
                            }
                        ]
                    }
