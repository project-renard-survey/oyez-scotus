        "title": "District Attorney\u0027s Office for the Third Judicial District v. Osborne",
        "duration": 244.248,
        "sections": [
            {
                "start": 0,
                "stop": 244.248,
                "byte_start": 107520,
                "byte_stop": 1084500,
                "turns": [
                    {
                        "start": 0,
                        "stop": 244.248,
                        "byte_start": 107520,
                        "byte_stop": 1084500,
                        "speaker": {
                            "ID": 15086,
                            "name": "John G. Roberts, Jr.",
                            "href": "https:\/\/api.oyez.org\/people\/john_g_roberts_jr",
                            "last_name": "Roberts",
                            "roles": [
                                {
                                    "id": 2730,
