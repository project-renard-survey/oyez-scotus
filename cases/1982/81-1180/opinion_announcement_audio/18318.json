                        ]
                    },
                    {
                        "start": 7.778,
                        "stop": 177.82,
                        "byte_start": 123450,
                        "byte_stop": 803574,
                        "speaker": {
                            "ID": 15045,
                            "name": "Harry A. Blackmun",
                            "href": "https:\/\/api.oyez.org\/people\/harry_a_blackmun",
                            "last_name": "Blackmun",
                            "roles": [
                                {
                                    "id": 2689,
