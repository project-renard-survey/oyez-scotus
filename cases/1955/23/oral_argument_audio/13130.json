                        "byte_start": 660417,
                        "byte_stop": 661044,
                        "speaker": {
                            "ID": 15050,
                            "name": "Felix Frankfurter",
                            "href": "https:\/\/api.oyez.org\/people\/felix_frankfurter",
                            "view_count": 0,
                            "last_name": "Frankfurter",
                            "roles": [
                                {
                                    "id": 2694,
                                    "type": "scotus_justice",
                                    "date_start": -975780000,
                                    "date_end": -231793200,
                                    "appointing_president": "Franklin D. Roosevelt",
                                    "role_title": "Associate Justice of the Supreme Court of the United States",
                                    "institution_name": "Supreme Court of the United States",
                                    "href": "https:\/\/api.oyez.org\/preson_role\/scotus_justice\/2694"
