                        "text_blocks": [
                            {
                                "start": 622.82,
                                "stop": 624.578,
                                "byte_start": 2594774,
                                "byte_stop": 2601775,
                                "text": "Is Holly the employee or the organizer?"
                            }
                        ]
                    },
                    {
                        "start": 624.578,
                        "stop": 647.777,
                        "byte_start": 2601775,
                        "byte_stop": 2694457,
                        "speaker": {
                            "ID": 37058,
                            "name": "Norton J. Come",
                            "href": "https:\/\/api.oyez.org\/people\/norton_j_come",
                            "view_count": 0,
                            "last_name": "Come",
                            "roles": null,
                            "thumbnail": null,
                            "length_of_service": 0,
                            "identifier": "norton_j_come"
                        },
                        "text_blocks": [
                            {
                                "start": 624.578,
                                "stop": 626.648,
                                "byte_start": 2601775,
                                "byte_stop": 2610030,
                                "text": "Holly was the employee."
                            },
                            {
                                "start": 626.648,
                                "stop": 641.08,
                                "byte_start": 2610030,
                                "byte_stop": 2667813,
                                "text": "He was an old time employee who had been active in the administration of the former union which had previously represented the employees before the Teamsters came on the scene."
                            },
                            {
                                "start": 641.08,
                                "stop": 647.777,
                                "byte_start": 2667813,
                                "byte_stop": 2694457,
                                "text": "I'll continue tomorrow."
                            }
                        ]
                    }
                ]
            }
