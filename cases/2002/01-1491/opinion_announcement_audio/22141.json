    "transcript": {
        "title": "Demore v. Kim",
        "duration": 534.909,
        "sections": [
            {
                "start": 0,
                "stop": 534.909,
                "byte_start": 85536,
                "byte_stop": 0,
                "turns": [
                    {
                        "start": 0,
                        "stop": 227.833,
                        "byte_start": 85536,
                        "byte_stop": 996896,
                        "speaker": {
                            "ID": 15141,
                            "name": "William H. Rehnquist",
                            "href": "https:\/\/api.oyez.org\/people\/william_h_rehnquist",
                            "last_name": "Rehnquist",
                            "roles": [
