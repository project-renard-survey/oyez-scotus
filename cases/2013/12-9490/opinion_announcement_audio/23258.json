    "title": "Opinion Announcement - April 22, 2014",
    "transcript": {
        "title": null,
        "duration": 171.024,
        "sections": [
            {
                "start": 0,
                "stop": 171.024,
                "byte_start": 106496,
                "byte_stop": 0,
                "turns": [
                    {
                        "start": 0,
