    "title": "Opinion Announcement - March 25, 2014",
    "transcript": {
        "title": null,
        "duration": 320.472,
        "sections": [
            {
                "start": 0,
                "stop": 320.472,
                "byte_start": 105472,
                "byte_stop": 0,
                "turns": [
                    {
