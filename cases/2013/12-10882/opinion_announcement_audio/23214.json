    "title": "Opinion Announcement - May 27, 2014",
    "transcript": {
        "title": null,
        "duration": 319.848,
        "sections": [
            {
                "start": 0,
                "stop": 319.848,
                "byte_start": 108544,
                "byte_stop": 0,
                "turns": [
                    {
                        "start": 0,
