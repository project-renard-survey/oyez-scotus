    "title": "Opinion Announcement - March 05, 2014",
    "transcript": {
        "title": null,
        "duration": 184.824,
        "sections": [
            {
                "start": 0,
                "stop": 184.824,
                "byte_start": 106496,
                "byte_stop": 0,
                "turns": [
                    {
                        "start": 0,
