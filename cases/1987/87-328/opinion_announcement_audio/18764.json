                            "identifier": "william_j_brennan_jr"
                        },
                        "text_blocks": [
                            {
                                "start": 0,
                                "stop": 9.474,
                                "byte_start": 28672,
                                "byte_stop": 66602,
                                "text": "The second case I have to announce also comes here on certiorari from the Court of Appeals for the Fourth Circuit."
                            },
                            {
                                "start": 9.474,
                                "stop": 14.899,
                                "byte_start": 66602,
                                "byte_stop": 88336,
                                "text": "It\u0027s Riley versus the National Federation of the Blind of North Carolina."
                            },
                            {
                                "start": 14.899,
                                "stop": 22.717,
                                "byte_start": 88336,
                                "byte_stop": 119578,
                                "text": "The question for decision in the case is the constitutionality of the North Carolina Charitable Solicitations Act."
                            },
                            {
                                "start": 22.717,
                                "stop": 38.559,
                                "byte_start": 119578,
                                "byte_stop": 183003,
                                "text": "That Act regulates professional fund raising and defines the prima facie reasonable fee that a professional fundraiser may charge according to a three-tiered schedule."
                            },
                            {
                                "start": 38.559,
                                "stop": 43.607,
                                "byte_start": 183003,
                                "byte_stop": 203170,
                                "text": "A fee up to 20% of receipts collected is deemed reasonable."
                            },
                            {
                                "start": 43.607,
                                "stop": 62.986,
                                "byte_start": 203170,
                                "byte_stop": 280701,
                                "text": "A fee between 20% and 35% is deemed unreasonable upon a showing that the solicitation at issue did not involve the dissemination of information, discussion, or advocacy relating to public issues as directed by the charitable organization which is to benefit from the solicitation."
                            },
                            {
                                "start": 62.986,
                                "stop": 85.711,
                                "byte_start": 280701,
                                "byte_stop": 371608,
                                "text": "A fee exceeding 35% is presumed unreasonable, but the fundraiser may rebut the presumption by showing that the fee was necessary either because the solicitation involved dissemination of information or advocacy on public issues directed by the charity, or because otherwise the charity\u0027s ability to raise money or communicate would be significantly diminished."
                            },
                            {
                                "start": 85.711,
                                "stop": 103.828,
                                "byte_start": 371608,
                                "byte_stop": 444019,
                                "text": "The Act also provides that a professional fundraiser must disclose to potential donors the average percentage of gross receipts actually turned over to charities by the fundraiser for all charitable solicitations conducted in the State within the previous 12 months."
                            },
                            {
                                "start": 103.828,
                                "stop": 117.293,
                                "byte_start": 444019,
                                "byte_stop": 497936,
                                "text": "And finally, the Act provides that professional fundraisers may not solicit without an approved license, whereas volunteer fundraisers may solicit immediately upon submitting a licensed application."
                            },
                            {
                                "start": 117.293,
                                "stop": 132.725,
                                "byte_start": 497936,
                                "byte_stop": 559585,
                                "text": "And appellees, a coalition of professional fundraisers, charitable organizations, and potential donors, brought the suit against the appellant government officials charged with enforcement of the Act seeking injunctive and declaratory relief."
                            },
                            {
                                "start": 132.725,
                                "stop": 142.206,
                                "byte_start": 559585,
                                "byte_stop": 597514,
                                "text": "The District Court ruled that the challenged provisions on their face unconstitutionally infringed upon freedom of speech and enjoined their enforcement."
                            },
                            {
                                "start": 142.206,
                                "stop": 148.238,
                                "byte_start": 597514,
                                "byte_stop": 621652,
                                "text": "The Court of Appeals affirmed and we in turn affirm the judgment of the Court of Appeals."
                            },
                            {
                                "start": 148.238,
                                "stop": 156.571,
                                "byte_start": 621652,
                                "byte_stop": 654984,
                                "text": "We hold that North Carolina\u0027s three-tiered definition of reasonable fees unconstitutionally infringes upon freedom of speech."
                            },
                            {
                                "start": 156.571,
                                "stop": 170.815,
                                "byte_start": 654984,
                                "byte_stop": 712035,
                                "text": "The solicitation of charitable contributions is protected speech, and using percentages to decide the legality of the fundraiser\u0027s fee is not we think narrowly tailored to the State\u0027s interest in preventing fraud."
                            },
                            {
                                "start": 170.815,
                                "stop": 188.597,
                                "byte_start": 712035,
                                "byte_stop": 783088,
                                "text": "And North Carolina\u0027s requirement to professional fundraisers disclose to potential donors, before an appeal for funds, percentage of charitable contributions collected during the previous 12 months that were actually turned over to charity is also unconstitutional."
                            },
                            {
                                "start": 188.597,
                                "stop": 199.914,
                                "byte_start": 783088,
                                "byte_stop": 828332,
                                "text": "This provision of the Act is a content-based regulation because mandating speech that a speaker would not otherwise make necessarily alters the speech\u0027s content."
                            },
                            {
                                "start": 199.914,
                                "stop": 227.276,
                                "byte_start": 828332,
                                "byte_stop": 937838,
                                "text": "Even assuming that the mandated speech, in the abstract, is merely commercial, it does not retain its commercial character when it is inextricably intertwined with the otherwise fully protected speech involved in charitable solicitations, and thus the mandated speech is subject to the test for fully protected expression, not the more deferential commercial speech principles."
                            },
                            {
                                "start": 227.276,
                                "stop": 234.064,
                                "byte_start": 937838,
                                "byte_stop": 965005,
                                "text": "Finally, North Carolina\u0027s licensing requirement as to professional fundraisers is unconstitutional."
                            },
                            {
                                "start": 234.064,
                                "stop": 249.932,
                                "byte_start": 965005,
                                "byte_stop": 1028430,
                                "text": "Speaker\u0027s rights are not lost merely because compensation is received, and the State\u0027s asserted power or licensed professional fundraisers carries with it, unless properly constrained the power directly and substantially to affect the speech they utter."
                            },
                            {
                                "start": 249.932,
                                "stop": 253.651,
                                "byte_start": 1028430,
                                "byte_stop": 1043372,
                                "text": "Consequently, the statute is subject to First Amendment scrutiny."
                            },
                            {
                                "start": 253.651,
                                "stop": 266.953,
                                "byte_start": 1043372,
                                "byte_stop": 1096558,
                                "text": "Generally, speakers need not obtain a license to speak even assuming that the State\u0027s interest in regulating those who solicit money justifies requiring fundraisers to obtain a license before soliciting."
                            },
                            {
                                "start": 266.953,
                                "stop": 275.619,
                                "byte_start": 1096558,
                                "byte_stop": 1131248,
                                "text": "Such a regulation must provide that the licensor will, within a specified brief period, either issue a license or go to court."
                            },
                            {
                                "start": 275.619,
                                "stop": 282.754,
                                "byte_start": 1131248,
                                "byte_stop": 1159774,
                                "text": "That requirement is not met here, for the North Carolina Act permits a delay without limit."
                            },
                            {
                                "start": 282.754,
                                "stop": 295.35,
                                "byte_start": 1159774,
                                "byte_stop": 1210138,
                                "text": "Justice Stevens joins only parts one two and three of the Court\u0027s opinion and Justice Scalia joins all of the opinion but not Footnote 11."
                            },
                            {
                                "start": 295.35,
                                "stop": 299.946,
                                "byte_start": 1210138,
                                "byte_stop": 1228528,
                                "text": "Justice Scalia has filed an opinion concurring in part and concurring in the judgment."
                            },
                            {
                                "start": 299.946,
                                "stop": 304.51,
                                "byte_start": 1228528,
                                "byte_stop": 1246814,
                                "text": "Justice Stevens filed an opinion concurring in part and dissenting in part."
                            },
                            {
                                "start": 304.51,
                                "stop": 310.133,
                                "byte_start": 1246814,
                                "byte_stop": 1269175,
                                "text": "The Chief Justice filed a dissenting opinion in which Justice O\u0027Connor joined."
                            }
                        ]
                    }
