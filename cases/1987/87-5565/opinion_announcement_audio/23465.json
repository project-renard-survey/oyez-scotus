                        "text_blocks": [
                            {
                                "start": 8.045,
                                "stop": 13.489,
                                "byte_start": 60855,
                                "byte_stop": 82693,
                                "text": "This case comes to us by writ of certiorari to the Superior Court of Pennsylvania."
                            },
                            {
                                "start": 13.489,
                                "stop": 17.134,
                                "byte_start": 82693,
                                "byte_stop": 97217,
                                "text": "The petitioner is the mother of an illegitimate child."
                            },
                            {
                                "start": 17.134,
                                "stop": 22.362,
                                "byte_start": 97217,
                                "byte_stop": 118220,
                                "text": "She sued the respondent for child support alleging that he is the child\u0027s father."
                            },
                            {
                                "start": 22.362,
                                "stop": 29.582,
                                "byte_start": 118220,
                                "byte_stop": 147059,
                                "text": "The Court dismissed the suit as barred by Pennsylvania six-year statute of limitations for paternity actions."
                            },
                            {
                                "start": 29.582,
                                "stop": 37.403,
                                "byte_start": 147059,
                                "byte_stop": 178301,
                                "text": "The statute effectively limits the time within which suits may be brought to obtain child support for illegitimate children."
                            },
                            {
                                "start": 37.403,
                                "stop": 45.148,
                                "byte_start": 178301,
                                "byte_stop": 209335,
                                "text": "By contrast, suits for child support for legitimate children may be brought at any time during their minority."
                            },
                            {
                                "start": 45.148,
                                "stop": 55.233,
                                "byte_start": 209335,
                                "byte_stop": 249668,
                                "text": "We hold in the opinion filed today that the Pennsylvania statute of limitations at issue violates the Equal Protection Clause of the Fourteenth Amendment."
                            },
                            {
                                "start": 55.233,
                                "stop": 65.04,
                                "byte_start": 249668,
                                "byte_stop": 288852,
                                "text": "The statute discriminates between legitimate and illegitimate children and is not substantially related to an important government objective."
                            },
                            {
                                "start": 65.04,
                                "stop": 71.356,
                                "byte_start": 288852,
                                "byte_stop": 314034,
                                "text": "Accordingly, we reverse the judgment below and the opinion is unanimous."
                            }
                        ]
                    }
                ]
            }
        ]
