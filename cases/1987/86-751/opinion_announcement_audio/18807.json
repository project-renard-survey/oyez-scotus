                        "text_blocks": [
                            {
                                "start": 9.872,
                                "stop": 16.447,
                                "byte_start": 68169,
                                "byte_stop": 94501,
                                "text": "This case is here on certiorari to the United States Court of Appeals for the Eighth Circuit."
                            },
                            {
                                "start": 16.447,
                                "stop": 26.713,
                                "byte_start": 94501,
                                "byte_stop": 135565,
                                "text": "The United States Tax Court held that the stock that was purchased for business purposes was subject to ordinary-loss treatment."
                            },
                            {
                                "start": 26.713,
                                "stop": 30.748,
                                "byte_start": 135565,
                                "byte_stop": 151761,
                                "text": "The Court of Appeals reversed this determination."
                            },
                            {
                                "start": 30.748,
                                "stop": 45.982,
                                "byte_start": 151761,
                                "byte_stop": 212679,
                                "text": "We conclude that petitioner\u0027s purpose in acquiring the stock is irrelevant to the determination whether the stock is within the broad definition of capital assets in the Internal Revenue Code."
                            },
                            {
                                "start": 45.982,
                                "stop": 51.32,
                                "byte_start": 212679,
                                "byte_stop": 233994,
                                "text": "We therefore affirm the judgment of the Court of Appeals of the Eighth Circuit."
                            },
                            {
                                "start": 51.32,
                                "stop": 56.578,
                                "byte_start": 233994,
                                "byte_stop": 254892,
                                "text": "Justice Kennedy took no part in the consideration or decision of this case."
                            }
                        ]
                    }
                ]
            }
